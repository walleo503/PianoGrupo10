<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstrumentosActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/fondo_instrumental"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/piano_instrumental"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnDo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/acordeon"
            android:src="@drawable/acordeon"
            android:scaleType="centerInside"
            android:contentDescription="@string/instrumentos"
            android:onClick="reproducirAcordeon"
            />

        <ImageButton
            android:id="@+id/btnRe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/flauta"
            android:contentDescription="@string/instrumentos"
            android:scaleType="centerInside"
            android:src="@drawable/flauta"
            android:onClick="reproducirFlauta"/>

        <ImageButton
            android:id="@+id/btnMi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/guitarra"
            android:src="@drawable/guitarra"
            android:scaleType="centerInside"
            android:contentDescription="@string/instrumentos"
            android:onClick="reproducirGuitarra" />

        <ImageButton
            android:id="@+id/btnFa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pianoi"
            android:src="@drawable/piano"
            android:scaleType="centerInside"
            android:contentDescription="@string/instrumentos"
            android:onClick="reproducirPiano" />

        <ImageButton
            android:id="@+id/btnSol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tambores"
            android:src="@drawable/tambores"
            android:scaleType="centerInside"
            android:contentDescription="@string/instrumentos"
            android:onClick="reproducirTambores" />

        <ImageButton
            android:id="@+id/btnLa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/trompeta"
            android:src="@drawable/trompeta"
            android:scaleType="centerInside"
            android:contentDescription="@string/instrumentos"
            android:onClick="reproducirTrompeta" />

        <ImageButton
            android:id="@+id/btnSi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/violin"
            android:src="@drawable/violin"
            android:scaleType="centerInside"
            android:contentDescription="@string/instrumentos"
            android:onClick="reproducirViolin" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
