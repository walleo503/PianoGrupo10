<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.PianoGrupo10">

        <!-- Actividad principal (Animales) -->
        <activity
            android:name=".AnimalesActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad real (Instrumentos) -->
        <activity
            android:name=".InstrumentosActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- Alias para Instrumentos (segundo Ã­cono de lanzador) -->
        <activity-alias
            android:name=".InstrumentosLauncher"
            android:targetActivity=".InstrumentosActivity"
            android:exported="true"
            android:label="Instrumentos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

    </application>
</manifest>

